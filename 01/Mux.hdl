/** 
 * Multiplexor:
 * if (sel == 0) out = a, else out = b
 */
CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not(in=sel, out=notsel);
    Nand(a=a, b=notsel, out=tmp0);
    Nand(a=b, b=sel, out=tmp1);
    Nand(a=tmp0, b=tmp1, out=out);
}
